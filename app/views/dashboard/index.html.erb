<div data-controller="game">
  <h1>Slot Machine</h1>
  <div>
  <h3 id="credits">Credits: <%= session[:user_credits] %></h3>
  </div>
  <div id="slot-machine">
    <div class="slot" id="slot1">X</div>
    <div class="slot" id="slot2">X</div>
    <div class="slot" id="slot3">X</div>
  </div>
  <button id="spin-button" data-action='click->game#startSpinning'>Spin</button>
  <%= button_to "Cash Out", cash_out_game_path, method: :post, id: "cash-out-button" %>
</div>
